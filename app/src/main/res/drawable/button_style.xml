<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- 背景色 -->
            <corners android:radius="8dp"/> <!-- 圆角 -->
            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/> <!-- 内边距 -->
        </shape>
    </item>
    <!-- 获取焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- 另一种颜色表示聚焦 -->
            <corners android:radius="8dp"/>
            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00BCD4"/> <!-- 默认背景色 -->
            <corners android:radius="8dp"/>
            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>